{
  "name": "ralph-mem",
  "version": "0.1.7",
  "type": "module",
  "description": "Persistent context management plugin for Claude Code with Ralph Loop",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    ".claude-plugin",
    "commands",
    "skills",
    "hooks",
    "prompts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roboco-io/ralph-mem.git"
  },
  "bugs": {
    "url": "https://github.com/roboco-io/ralph-mem/issues"
  },
  "homepage": "https://github.com/roboco-io/ralph-mem#readme",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx @biomejs/biome check src/",
    "lint:fix": "bunx @biomejs/biome check --write src/",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "version": "bun run scripts/sync-version.ts && git add .claude-plugin/plugin.json"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "js-yaml": "^4.1.1",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "^1.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "claude-code",
    "plugin",
    "memory",
    "context",
    "ralph-loop"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "bunx @biomejs/biome check --write"
    ]
  }
}
